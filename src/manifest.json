{
  "name": "Mark Image",
  "version": "0.8",
  "manifest_version":2,
  "description": "Upload Images as simple as paste. Shortcut: CTRL + SHIFT + S",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.htm"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      }
    }
  },
  "permissions": [
    "tabs",
    "notifications",
    "http://*/*", 
    "https://*/*" 
  ],
  "web_accessible_resources": [
    "icon.png"
  ],
  "background" : {
    "scripts": ["bg.js"]
    // "scripts":["chrome_ex_oauth.js", "chrome_ex_oauthsimple.js", "bg.js"]
  },
  "content_scripts": [
    {
        "matches": ["*://*.github.com/*"],
        "js": ["lib/jquery-1.9.1.min.js","github.js"],
        "run_at":"document_end"
    }
  ],
  "icons": {
    "16":"icon.png",           
    "48":"icon.png",            
    "128":"icon.png"            
  },
  "options_page": "options.htm",    
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com;  object-src 'self'"
}
